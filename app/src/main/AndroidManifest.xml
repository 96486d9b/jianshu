<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="c.zju.jianshu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="c.zju.jianshu.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="c.zju.jianshu.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="c.zju.jianshu.activity.SignupActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="c.zju.jianshu.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="c.zju.jianshu.activity.BookInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.ScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.BookNoteEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.BookInfoAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="c.zju.jianshu.activity.TotalActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>