<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="c.zju.jianshu.activity.MainActivity"
    tools:showIn="@layout/main_app">

    <c.zju.jianshu.view.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bright_red"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:tab_line_color="@color/tab_color_line"
        app:tab_line_height="2"
        app:tab_text_highlight_color="@color/tab_color_chooose"
        app:tab_text_normal_color="@color/tab_color_notchoose"
        app:tab_text_size="15"
        app:tab_visible_count="2">
    </c.zju.jianshu.view.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
