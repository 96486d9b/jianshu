<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c.zju.jianshu.fragment.BookNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon_date"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_face" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBaseline="@id/iv_icon_date"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/iv_icon_date"
                android:gravity="center_vertical"
                android:text="日期"
                android:textColor="@color/book_note_tag_font" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@id/iv_icon_date"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_write" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryContentBg"
            android:textColor="@color/colorPrimaryContentFont"
            android:padding="10dp"
            android:text="笔记" />
    </LinearLayout>

</ScrollView>
